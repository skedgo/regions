{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://region-registry.skedgo.com/feed.schema.json",
  "title": "Public Transport Data Feed",
  "description": "Public Transport Data Feed specification.",
  "type": "object",
  "properties": {
    "id": {
      "description": "Unique identifier for this feed.",
      "type": "string"
    },  
    "name": {
      "description": "Human friendly name for this feed.",
      "type": "string"
    },
    "type": {
      "description": "Type of this feed.",
      "enum": ["gtfs", "netex", "txc"],
      "default": "gtfs"
    },
    "source": {
      "description": "Details about how to get this feed.",
      "type": "object",
      "properties": {
        "url": {
          "description": "URL where this feed can downloaded.",
          "type": "string"
        },
        "headers": {
          "description": "HTTP headers to include in order to download this feed.",
          "type": "object",
          "additionalProperties": {"type": "string"}
        },
        "checkCertificate": {
          "description": "(Only for HTTPS requests) Whether to check or not the https certificates when downloading this feed.",
          "type": "boolean",
          "default": true
        },
        "credentials": {
          "description": "Credentials for Basic Authentication. (Alternatively, you can provide a Basic Auth header in the headers field.)",
          "type": "object",
          "properties": {
            "user": {
              "description": "User name for Basic Auth",
              "type": "string"
            },
            "pass": {
              "description": "Password for Basic Auth",
              "type": "string"
            }
          }
        },
        "dataProvider": {
          "description": "Data provider details.",
          "type": "object",
          "properties": {
            "name": {
              "description": "Name of the provider",
              "type": "string"
            },
            "url": {
              "description": "Website of the provider",
              "type": "string"
            }
          },
          "required": [ "name" , "url" ]
        }
      }, 
      "required": [ "url" ]
    },
    "hasRT": {
      "description": "If this feed should be enhanced with real time information.",
      "type": "boolean"
    },
    "excludedFiles": {
      "description": "List of the files to exclude when parsing this feed.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "includeOnlyFiles": {
      "description": "List of the files to include when parsing this feed.",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [ "id", "name", "source" ]
}
